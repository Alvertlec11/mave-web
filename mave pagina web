    .logo{font-family:'Press Start 2P',monospace;font-size:20px;color:var(--paper);letter-spacing:2px}
    .tag{font-size:12px;color:var(--muted)}
    nav{display:flex;gap:10px;align-items:center}
    .nav-btn{background:none;border:1px solid transparent;color:var(--paper);padding:8px 10px;border-radius:8px;cursor:pointer;font-size:14px}
    .nav-btn:hover{border-color:rgba(255,255,255,0.06)}

    .controls{display:flex;gap:8px;align-items:center}
    .icon-btn{background:var(--bg-700);border:1px solid rgba(255,255,255,0.03);color:var(--cream);padding:8px 10px;border-radius:8px;cursor:pointer}
    .badge{background:var(--paper);color:var(--bg-900);padding:4px 8px;border-radius:999px;font-weight:600;margin-left:6px}

    /* Mobile menu (hidden on desktop) */
    .hamburger{display:none;background:none;border:1px solid transparent;color:var(--paper);padding:8px;border-radius:8px}

    /* Hero */
    .hero{display:flex;align-items:center;justify-content:space-between;margin:24px 0;gap:18px;flex-wrap:wrap}
    .hero .txt{max-width:620px}
    .hero h1{font-family:'Press Start 2P';font-size:32px;color:var(--paper);margin:0}
    .hero p{color:var(--muted);margin-top:6px;font-size:15px}
    .logo-box{width:220px;height:140px;border-radius:12px;background:linear-gradient(135deg,var(--paper),var(--cream));display:flex;align-items:center;justify-content:center;color:var(--bg-900);font-weight:700}

    /* Grid */
    .grid{display:grid;grid-template-columns:260px 1fr;gap:20px}
    .panel{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));padding:16px;border-radius:12px;border:1px solid rgba(255,255,255,0.03)}

    .search{display:flex;gap:8px;margin-bottom:12px}
    .search input{flex:1;padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:var(--cream)}

    /* Filters */
    .category-list button{display:block;width:100%;text-align:left;padding:10px;border-radius:8px;border:none;background:none;color:var(--cream);margin-bottom:8px;cursor:pointer}
    .category-list button.active{background:var(--paper);color:var(--bg-900)}
    #size-filters{display:flex;gap:6px;flex-wrap:wrap}
    #size-filters button{padding:8px 10px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:var(--cream);cursor:pointer}

    /* Products */
    .products{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:16px}
    .card{background:var(--bg-700);padding:12px;border-radius:10px;min-height:220px;display:flex;flex-direction:column;justify-content:space-between;position:relative;overflow:hidden}
    .card .thumb{height:120px;border-radius:8px;background:linear-gradient(180deg,var(--paper),var(--cream));display:flex;align-items:center;justify-content:center;color:var(--bg-900);font-weight:700}
    .card h4{margin:10px 0 6px 0;font-size:16px}
    .meta{display:flex;justify-content:space-between;align-items:center}

    .btn{background:var(--paper);color:var(--bg-900);border:none;padding:8px 10px;border-radius:8px;cursor:pointer}
    .btn.ghost{background:transparent;border:1px solid rgba(255,255,255,0.06);color:var(--paper)}

    /* Wishlist heart (inside card) */
    .wish-btn{position:absolute;top:10px;right:10px;background:rgba(0,0,0,0.45);width:36px;height:36px;border-radius:50%;display:flex;align-items:center;justify-content:center;color:var(--cream);cursor:pointer;z-index:5;border:1px solid rgba(255,255,255,0.03)}

    /* Cart drawer (desktop) */
    .drawer{position:fixed;right:18px;top:18px;width:360px;max-width:calc(100% - 36px);background:var(--bg-900);border:1px solid rgba(255,255,255,0.04);padding:16px;border-radius:12px;box-shadow:0 8px 40px rgba(0,0,0,0.6);z-index:60}

    /* Mobile drawer (bottom) */
    .drawer-bottom{position:fixed;left:0;right:0;bottom:0;background:var(--bg-900);border-top-left-radius:12px;border-top-right-radius:12px;padding:12px;border:1px solid rgba(255,255,255,0.04);z-index:60}

    /* modal */
    .modal-backdrop{position:fixed;inset:0;background:rgba(0,0,0,0.6);display:flex;align-items:center;justify-content:center;z-index:70}
    .modal{background:var(--bg-900);padding:16px;border-radius:12px;width:92%;max-width:420px;border:1px solid rgba(255,255,255,0.04)}

    footer{margin-top:28px;padding:12px 0;text-align:center;color:var(--muted);font-size:13px}

    /* Responsive tweaks */
    @media(max-width:900px){
      .products{grid-template-columns:repeat(auto-fill,minmax(180px,1fr));}
    }
    @media(max-width:800px){
      .grid{grid-template-columns:1fr}
      .logo{font-size:18px}
      nav{display:none}
      .hamburger{display:inline-block}
      .drawer{display:none}
    }
    @media(max-width:500px){
      .hero{margin:16px 0}
      .hero h1{font-size:22px}
