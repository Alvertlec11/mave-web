    body{font-family:Inter,system-ui,Arial, sans-serif;background:linear-gradient(180deg,var(--bg-900),#0c0d09);color:var(--cream);-webkit-font-smoothing:antialiased}

    /* Layout container */
    .wrap{max-width:var(--max-width);margin:0 auto;padding:18px}

